{{>layout/header}}

<div class="container my-4">
    <h1 class="mb-4">게시글 목록</h1>

    <table class="table table-hover">
        <thead class="table-light">
        <tr>
            <th style="width: 10%;">번호</th>
            <th style="width: 15%;">카테고리</th>
            <th>제목</th>
            <th style="width: 15%;">작성자</th>
            <th style="width: 15%;">작성일</th>
        </tr>
        </thead>
        <tbody>
        {{#pageData.items}}
            <!-- 공지사항일 경우, 행에 특별한 스타일과 굵은 글씨 적용 -->
            <tr {{#isNotice}}class="table-info fw-bold"{{/isNotice}}>
                <td>
                    <!-- 공지사항이면 '공지' 배지 표시, 아니면 게시글 ID 표시 -->
                    {{#isNotice}}
                        <span class="badge bg-danger">공지</span>
                    {{/isNotice}}
                    {{^isNotice}}
                        {{id}}
                    {{/isNotice}}
                </td>
                <td>{{categoryName}}</td>
                <td>
                    <!-- 제목 링크 -->
                    <a href="/posts/{{id}}" class="text-decoration-none text-dark">{{title}}</a>
                    <!-- 댓글 수가 0보다 크면, 댓글 수 표시 (위치 수정) -->
                    {{#replyCount}}
                        <span class="text-muted small ms-1">[{{replyCount}}]</span>
                    {{/replyCount}}
                </td>
                <td>{{authorName}}</td>
                <td>{{createdAt}}</td>
            </tr>
        {{/pageData.items}}

        <!-- 게시글이 하나도 없을 때 표시될 메시지 -->
        {{^pageData.items}}
            <tr>
                <td colspan="5" class="text-center py-5">
                    등록된 게시글이 없습니다.
                </td>
            </tr>
        {{/pageData.items}}
        </tbody>
    </table>

    <!-- 페이징 네비게이션 -->
    <ul class="pagination justify-content-center">
        <!-- 이전 페이지 링크 -->
        <li class="page-item {{#pageData.first}}disabled{{/pageData.first}}">
            <a class="page-link" href="?page={{pageData.prevPageNumber}}">이전</a>
        </li>

        <!-- 페이지 번호 목록 -->
        {{#pageData.pageLinks}}
            <li class="page-item {{#active}}active{{/active}}">
                <a class="page-link" href="?page={{pageNumber}}">{{displayNumber}}</a>
            </li>
        {{/pageData.pageLinks}}

        <!-- 다음 페이지 링크 -->
        <li class="page-item {{#pageData.last}}disabled{{/pageData.last}}">
            <a class="page-link" href="?page={{pageData.nextPageNumber}}">다음</a>
        </li>
    </ul>
</div>

{{>layout/footer}}
